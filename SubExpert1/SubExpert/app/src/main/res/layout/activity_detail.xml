<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".DetailActivity">
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/img_photo"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@android:color/darker_gray"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@id/img_photo"
        android:text="Judul Film"
        android:textSize="18sp"
        android:textStyle="bold" />
    +.
    <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_photo"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="25"
        android:text="@string/lorem" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/lay1"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/img_photo"
        android:layout_below="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textStyle="bold|normal"
            android:id="@+id/tvsutra"
            android:text="Sutradara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/tvsutra"
            android:maxLines="2"
            android:id="@+id/sutradara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sutradara"/>

        <TextView
            android:layout_marginTop="5dp"
            android:textStyle="bold|normal"
            android:id="@+id/tvprod"
            android:layout_below="@+id/sutradara"
            android:text="Produksi"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/tvprod"
            android:id="@+id/produksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produksi"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:textStyle="bold|normal"
            android:id="@+id/tvThn"
            android:layout_below="@+id/produksi"
            android:text="Tahun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/tvThn"
            android:id="@+id/tahun_produksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tahun produksi"/>


    </RelativeLayout>


</RelativeLayout>
